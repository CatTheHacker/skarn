        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.33.1/sweetalert2.min.css" integrity="sha256-/PVkO2+mUlKqE6wgKVXU5Wh4mx3vncHAxLEdpXrziGo=" crossorigin="anonymous" />
        <link rel="stylesheet" href="style.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.5/semantic.min.js" integrity="sha256-x9fzgXT3ttK2cZF12FIafkDJzEqqLnaWcchT+Y/plJ4=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.33.1/sweetalert2.min.js" integrity="sha256-rNQvJc3/MuwBWFwVTqr0qJ91nWA1pR7PDLk31hgGqP8=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tablesort/5.1.0/tablesort.min.js" integrity="sha256-p3wukcf2d2jxbVnlqPDO9t4AAjnl42D2aIzrK4S0X6w=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tablesort/5.1.0/sorts/tablesort.number.min.js" integrity="sha256-ra1pWQ7MfuVIolZ/phcEXegs9m1ehXaCNI8cmc3gJEs=" crossorigin="anonymous"></script>
        <!---->
        <style>
            .main.menu .item img.logo { margin-right: 1em; }
            body { overflow: visible; }
            .ui.container { margin: 2em 0 !important; width: max-content; width: -moz-max-content; }
            .ui.header { padding: 0 .5em; }
            .segment .header { padding: 0; }
        </style>
    </head>
    <body>
        <div class="ui main menu">
            <div class="header item">
                <img class="logo" src="https://cdn.discordapp.com/avatars/{{user.Snowflake}}/{{user.Avatar}}.jpeg">
                {{user.RealName}}
            </div>
            <div class="right item">Powered by&nbsp;<a href="https://github.com/nektro/skarn" target="_blank">Skarn</a>&nbsp;<code>{{version}}</code></div>
        </div>
        <div class="ui container">
            <h1 class="ui header"><i class="folder open icon"></i> Media Requests</h1>
            <div class="ui secondary pointing menu">
                <a class="item{{#equal page "reqs"}} active{{/equal}}" href="/requests">Requests</a>
                <a class="item{{#equal page "new"}} active{{/equal}}" href="/new">New Request</a>
                <a class="item{{#equal page "users"}} active{{/equal}}" href="/leaderboard">Leaderboard</a>
                <a class="item{{#equal page "stats"}} active{{/equal}}" href="/stats">Statistics</a>
                {{#if user.IsAdmin}}
                <a class="item{{#equal page "a/u"}} active{{/equal}}" href="/admin/users"><i class="gavel icon"></i> All Users</a>
                {{/if}}
            </div>
